<h1>Listing beers</h1>

<table>
  <tr>
    <th>Brewer</th>
    <th>Beer name</th>
    <th>City</th>
    <th>State</th>
  </tr>

<% @beers.each do |beer| %>
  <tr>
    <td><%=h beer.brewer %></td>
    <td><%=h beer.beer_name %></td>
    <td><%=h beer.city %></td>
    <td><%=h beer.state %></td>
    <td><%= link_to 'Show', beer %></td>
    <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
    <td><%= link_to 'Destroy', beer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New beer', new_beer_path %>